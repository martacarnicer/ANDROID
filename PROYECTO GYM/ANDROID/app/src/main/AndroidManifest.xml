<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GymProject"
        tools:targetApi="31">
        <activity
            android:name=".activities.PerfilActivity"
            android:exported="false" />
        <activity
            android:name=".activities.NotificacionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ReservasActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InscribirActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ClasesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DashboardUsuarioActivity"
            android:exported="false" /> <!-- SplashActivity será la actividad de inicio -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"> <!-- Sin barra de acción -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity: Pantalla de login -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" /> <!-- RegisterActivity: Pantalla de registro -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true" />
    </application>

</manifest>