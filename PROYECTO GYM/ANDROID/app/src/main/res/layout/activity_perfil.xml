<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen superior con el título "Mi Perfil" -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imageViewProfileHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/top_background_modified_colors_v3" />

            <TextView
                android:id="@+id/textViewProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:text="Mi Perfil"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Sección de datos de usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Campo de texto Nombre -->
            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- EditText para Nombre -->
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:hint="Introduce tu nombre"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#707070"
                android:textSize="16sp" />

            <!-- Campo de texto Apellido -->
            <TextView
                android:id="@+id/textViewApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Apellido"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- EditText para Apellido -->
            <EditText
                android:id="@+id/etApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:hint="Introduce tu apellido"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#707070"
                android:textSize="16sp" />

            <!-- Campo de texto Email -->
            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- EditText para Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:hint="Introduce tu email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#707070"
                android:textSize="16sp" />

            <!-- Campo de texto Contraseña Actual (solo lectura) -->
            <TextView
                android:id="@+id/textViewPasswordActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña Actual"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- EditText para Contraseña Actual (No editable, enmascarada) -->
            <EditText
                android:id="@+id/etPasswordActual"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:hint="********"
                android:inputType="textPassword"
                android:padding="10dp"
                android:enabled="false"
                android:textColor="#707070"
                android:textSize="16sp" />

            <!-- Campo de texto Contraseña Nueva -->
            <TextView
                android:id="@+id/textViewPasswordNueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Contraseña Nueva"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- EditText para Contraseña Nueva -->
            <EditText
                android:id="@+id/etPasswordNueva"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:hint="Introduce tu nueva contraseña"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#707070"
                android:textSize="16sp" />

            <!-- Campo de texto Teléfono -->
            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Teléfono"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- EditText para Teléfono -->
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:hint="Introduce tu teléfono"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#707070"
                android:textSize="16sp" />

            <!-- Spinner para seleccionar el tipo de cuota -->
            <TextView
                android:id="@+id/textViewTipoCuota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tipo de Cuota"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerTipoCuota"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:padding="10dp" />

            <!-- Spinner para seleccionar el centro si el plan es Básico -->
            <TextView
                android:id="@+id/textViewCentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Selecciona tu centro"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerCentro"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_style_morado"
                android:padding="10dp"
                android:visibility="gone" />

            <!-- Botón para guardar cambios -->
            <Button
                android:id="@+id/btnGuardarCambios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#363166"
                android:padding="14dp"
                android:text="Guardar Cambios"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Botón para darse de baja -->
            <Button
                android:id="@+id/btnDarseBaja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FF0000"
                android:padding="14dp"
                android:text="Darse de Baja"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:layout_gravity="center"
                android:padding="12dp"
                android:textSize="16sp"
                android:backgroundTint="#363166"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
