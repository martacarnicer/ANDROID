<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Fecha de la reserva con color negro -->
        <TextView
            android:id="@+id/textDiaReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ­a"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
        android:layout_marginBottom="8dp" />

        <!-- Centro de la clase con color negro -->
        <TextView
            android:id="@+id/textCentroReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centro"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
        android:layout_marginBottom="4dp" />

        <!-- Nombre de la clase con color negro -->
        <TextView
            android:id="@+id/textNombreClaseReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Clase"
            android:textSize="14sp"
            android:textColor="#000000"
        android:layout_marginBottom="4dp" />

        <!-- Hora de la clase -->
        <TextView
            android:id="@+id/textHoraReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            android:textSize="14sp"
            android:textColor="#757575" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
