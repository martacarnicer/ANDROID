<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color cuando la pestaña está seleccionada -->
    <item android:state_selected="true" android:drawable="@color/green_pressed"/>
    <!-- Color cuando la pestaña está presionada -->
    <item android:state_pressed="true" android:drawable="@color/green_pressed"/>
    <!-- Color por defecto (cuando no está presionada ni seleccionada) -->
    <item android:drawable="@color/gray_default"/>
</selector>
